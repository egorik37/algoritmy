#include <iostream>
#include <vector>
using namespace std;

struct Node {
    int val;
    Node* next;
    Node(int v, Node* n=nullptr): val(v), next(n) {}
};

class Stack {
    Node* head = nullptr;
public:
    ~Stack() { while (head) { Node* t = head; head = head->next; delete t; } }
    bool empty() const { return head == nullptr; }
    void push(int v) { head = new Node(v, head); }
    bool pop(int &out) {
        if (!head) return false;
        out = head->val;
        Node* t = head; head = head->next; delete t;
        return true;
    }
    bool top(int &out) const {
        if (!head) return false;
        out = head->val; return true;
    }
};

vector<int> dailyTemperatures(const vector<int>& temperatures) {
    int n = (int)temperatures.size();
    vector<int> res(n, 0);
    Stack st; 

    for (int i = 0; i < n; ++i) {
        int idxTop;
        while (!st.empty() && (st.top(idxTop), temperatures[i] > temperatures[idxTop])) {
            st.pop(idxTop);
            res[idxTop] = i - idxTop;
        }
        st.push(i);
    }
    return res;
}

int main() {
    int n;
    if (!(cin >> n)) return 0;
    vector<int> a(n);
    for (int i = 0; i < n; ++i) cin >> a[i];

    vector<int> ans = dailyTemperatures(a);
    for (int i = 0; i < n; ++i) {
        if (i) cout << " ";
        cout << ans[i];
    }
    cout << "\n";
    return 0;
}
